@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pizarra Colaborativa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>
@{
    var userName = ViewData["UserName"];
}

<div class="layout-wrapper d-flex">
    <!-- FIXED NAVBAR -->
    <div class="fixed-left-bar d-flex flex-column align-items-center">
        <button id="toggleSidebar" class="icon-btn mt-3" title="Menú">
            <span id="menuIcon" class="material-symbols-outlined">menu</span>
        </button>
        <button class="icon-btn mt-4" title="Perfil">
            <span class="material-symbols-outlined">person</span>
        </button>      
        <button class="icon-btn mt-4" title="Notificaciones">
            <span class="material-symbols-outlined">notifications</span>
        </button>
        <form asp-controller="Cuenta" asp-action="Logout" method="post" class="mt-auto mb-3">
            <button type="submit" class="icon-btn" title="Cerrar sesión">
                <span class="material-symbols-outlined">logout</span>
            </button>
        </form>
    </div>

    <!-- SIDEBAR -->
    <div id="sidebar" class="sidebar">
        <div class="p-3">
            <h3>@userName</h3>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a asp-controller="Home" asp-action="Index" class="nav-link btn btn-link d-flex align-items-center text-decoration-none text-start">
                        <span class="material-symbols-outlined me-2">home</span>
                        Mis Pizarras
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <button type="button" class="nav-link btn btn-link d-flex align-items-center text-decoration-none text-start"
                        data-bs-toggle="modal" data-bs-target="#modalCrearPizarra">
                        <span class="material-symbols-outlined me-2">add</span>
                        Crear Pizarra
                    </button>
                </li>
                <!--<li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-decoration-none" asp-controller="Pizarra" asp-action="Papelera">
                        <span class="material-symbols-outlined me-2">delete</span>
                        Papelera
                    </a>
                </li>-->
            </ul>
        </div>
    </div>

    <!-- MODAL CREAR PIZARRA -->
    <div class="modal fade" id="modalCrearPizarra" tabindex="-1" aria-labelledby="labelCrearPizarra" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-success">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="labelCrearPizarra">Crear nueva pizarra</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <form asp-controller="Pizarra" asp-action="Crear" method="post">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="nombrePizarra" class="form-label">Nombre de la pizarra</label>
                            <input type="text" class="form-control" id="nombrePizarra" name="nombre" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-success">Crear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div id="main-content" class="main-content">
        <div class="container py-4">
            @RenderBody()
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
 <script src="~/js/img.js" asp-append-version="true"></script>
<script src="~/js/_Layout.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>